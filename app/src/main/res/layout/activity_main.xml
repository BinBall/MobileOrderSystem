<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        android:src="@drawable/diancanlogo" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:rowCount="4"
        android:columnCount="2">

<!--        第0行-->
        <ImageButton
            android:id="@+id/imgBtn_foodOrder"
            android:src="@drawable/diancan"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/imgBtn_foodTakeOut"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:src="@drawable/waimai"
            android:padding="0dp"
            android:scaleType="centerCrop"/>

<!--        第1行-->
        <ImageButton
            android:id="@+id/imgBtn_userInfo"
            android:src="@drawable/gerenzhongxin"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/imgBtn_login"
            android:src="@drawable/denglu"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"/>

        <ImageButton
            android:id="@+id/imgBtn_logout"
            android:src="@drawable/zhuxiao"
            android:visibility="gone"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:padding="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:scaleType="centerCrop"/>

    </GridLayout>

    <ImageButton
        android:id="@+id/imgBtn_settings"
        android:src="@drawable/xitongshezhi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="0dp"
        android:scaleType="centerCrop"/>

</LinearLayout>